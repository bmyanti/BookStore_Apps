<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_blue">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layoutRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:background="@color/white">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp">

                                <EditText
                                    android:id="@+id/et_username"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/user"
                                    android:drawableTint="@color/dot_dark_screen2"
                                    android:singleLine="true"
                                    android:focusable="false"
                                    android:hint="User Name"
                                    android:textColor="@color/dot_dark_screen2"
                                    android:inputType="text" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:focusable="false"
                                    android:id="@+id/et_fn"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/user"
                                    android:drawableTint="@color/dot_dark_screen2"
                                    android:singleLine="true"
                                    android:hint="First Name"
                                    android:textColor="@color/dot_dark_screen2"
                                    android:inputType="text" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:focusable="false"
                                    android:id="@+id/et_ln"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/user"
                                    android:drawableTint="@color/dot_dark_screen2"
                                    android:singleLine="true"
                                    android:hint="Last Name"
                                    android:inputType="text"
                                    android:textColor="@color/dot_dark_screen2"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp">

                                <EditText
                                    android:focusable="false"
                                    android:id="@+id/et_dob"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/calendar"
                                    android:drawableTint="@color/dot_dark_screen2"
                                    android:singleLine="true"
                                    android:hint="DoB"
                                    android:inputType="text"
                                    android:textColor="@color/dot_dark_screen2"/>
                            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person_ex"
        android:transitionName="taylor"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="bottom|center" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/cancelProfil"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/cancel_blue"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_gravity="bottom|center"
        android:layout_marginRight="45dp"/>

    <ImageButton
        android:id="@+id/saveProfil"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/tick_blue"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_gravity="center|bottom"
        android:layout_marginLeft="45dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user_circle"
        android:layout_gravity="top|center"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        />
</FrameLayout>