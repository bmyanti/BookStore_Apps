<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sand">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/shel"

   >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price:"
            android:textSize="23dp"
            android:layout_margin="3dp"
            android:id="@+id/txtTotalPrice"
            android:background="@color/sand"
            android:textColor="@color/grape"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/shel"
            android:padding="5dp">
        <ImageView
            android:id="@+id/ivShopCart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/ex_book4"
            />
            <TextView
                android:id="@+id/txtNameBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/egg_plant"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Nama Buku" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textColor="@color/deep_orange"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_gravity="right"
                    android:layout_marginLeft="130dp"
                    android:textColor="@color/deep_orange"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"

               >
                <ImageButton
                    android:id="@+id/IBminus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/minus"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="20dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/grape"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:id="@+id/IBPlus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/txtPrice"
                    android:textColor="@color/grape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 600"
                    android:textSize="20dp"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/seatLegendLayout">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:id="@+id/linearLayout_gridtableLayout"
                    android:layout_width="900dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <GridView
                        android:id="@+id/listShopCart"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="2dp"
                        android:columnWidth="90dp"
                        android:gravity="center"
                        android:horizontalSpacing="1dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbars="horizontal"
                        android:stretchMode="none"
                        >
                    </GridView>
                </LinearLayout>
            </FrameLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>
    </ScrollView>

</LinearLayout>
